<bpel:process name="Alarm"
         targetNamespace="http://wso2.org/bps/sample"
         suppressJoinFailure="yes"
         xmlns:tns="http://wso2.org/bps/sample"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         >

    <!-- Import the client WSDL -->
	<bpel:import location="AlarmArtifacts.wsdl" namespace="http://wso2.org/bps/sample" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <!-- The 'client' role represents the requester of this service. -->
        <bpel:partnerLink name="client"
                     partnerLinkType="tns:Alarm"
                     myRole="AlarmProvider"
                     />
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:AlarmRequestMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:AlarmResponseMessage"/>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in Alarm.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:Alarm"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:assign validate="no" name="Assign">
            <bpel:copy>
                <bpel:from><bpel:literal><tns:AlarmResponse xmlns:tns="http://wso2.org/bps/sample" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>tns:result</tns:result>
</tns:AlarmResponse>
</bpel:literal></bpel:from>
                <bpel:to variable="output" part="payload"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:input]]></bpel:query>
                </bpel:from>
                <bpel:to part="payload" variable="output">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:scope name="Scope">
            <bpel:faultHandlers><bpel:catchAll>
                    <bpel:empty name="Empty"></bpel:empty>
                </bpel:catchAll></bpel:faultHandlers>
            <bpel:scope name="Scope1">
                <bpel:eventHandlers><bpel:onAlarm><bpel:scope>
                            <bpel:sequence>
                                <bpel:assign validate="no" name="Assign1">
                                    <bpel:copy>
                                        <bpel:from>
                                            <bpel:literal>On alarm triggered</bpel:literal>
                                        </bpel:from>
                                        <bpel:to part="payload" variable="output">
                                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                                <![CDATA[tns:result]]>
                                            </bpel:query>
                                        </bpel:to>
                                    </bpel:copy>
                                </bpel:assign>
                                <bpel:throw name="Throw" faultName="tns:goodFault"></bpel:throw>
                            </bpel:sequence>
                        </bpel:scope><bpel:for><![CDATA["PT1S"]]></bpel:for></bpel:onAlarm></bpel:eventHandlers>
                <bpel:if name="If">
                    <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$input.payload/tns:input='10']]></bpel:condition>
                    <bpel:sequence name="Sequence">
                        <bpel:empty name="Empty1"></bpel:empty>
                    </bpel:sequence>
                    <bpel:else>
                        <bpel:sequence name="Sequence1">
                            <bpel:wait name="Wait">
                                <bpel:for><![CDATA['PT15S']]></bpel:for>
                            </bpel:wait>
                        </bpel:sequence>
                    </bpel:else>
                </bpel:if>
            </bpel:scope>
        </bpel:scope>
        <bpel:reply name="replyOutput" 
               partnerLink="client"
               portType="tns:Alarm"
               operation="process" 
               variable="output"
               />
    </bpel:sequence>
</bpel:process>

