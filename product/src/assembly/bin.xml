<assembly>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>wso2bps-${project.version}</baseDirectory>
    <id>wso2bps</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <!-- Including Carbon Kernel -->
        <fileSet>
            <directory>target/wso2carbon-kernel-${carbon.kernel.version}</directory>
            <outputDirectory>.</outputDirectory>
            <excludes>
                <exclude>README.txt</exclude>
                <exclude>LICENSE.txt</exclude>
                <exclude>INSTALL.txt</exclude>
                <exclude>release-notes.html</exclude>
                <exclude>**/*.ipr</exclude>
                <exclude>**/*.iwr</exclude>
                <exclude>**/*.eclipse</exclude>
                <!-- Overwritten files -->
                <exclude>**/netty-transports.yml</exclude>
            </excludes>
        </fileSet>

        <!-- Configuration Directory -->
        <fileSet>
            <directory>carbon-home/conf/transports</directory>
            <outputDirectory>conf/transports</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>carbon-home/conf/datasources</directory>
            <outputDirectory>conf/datasources</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <!-- Resources Directory -->
        <fileSet>
            <directory>carbon-home/resources</directory>
            <outputDirectory>resources</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <!-- Deployment Directory -->
        <fileSet>
            <directory>carbon-home/deployment/bpmn</directory>
            <outputDirectory>deployment/bpmn</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>


        <!-- Copy BPEL samples -->
        <!--<fileSet>-->
            <!--<directory>../samples/</directory>-->
            <!--<outputDirectory>samples</outputDirectory>-->
            <!--<excludes>-->
                <!--<exclude>**/target/**</exclude>-->
                <!--<exclude>**/.vagrant.d/**</exclude>-->
                <!--<exclude>**/.vagrant/**</exclude>-->
                <!--<exclude>**/kubernetes-vagrant-coreos-cluster/docker/**</exclude>-->
                <!--<exclude>**/VirtualBox VMs/**</exclude>-->
                <!--<exclude>**/dependency-reduced-pom.xml</exclude>-->
                <!--<exclude>**/*.iml</exclude>-->
                <!--<exclude>**/*.ipr</exclude>-->
                <!--<exclude>**/*.iwr</exclude>-->
                <!--<exclude>**/*.eclipse</exclude>-->
            <!--</excludes>-->
        <!--</fileSet>-->
    </fileSets>


    <files>
        <file>
            <source>../LICENSE.txt</source>
            <outputDirectory></outputDirectory>
            <fileMode>644</fileMode>
            <filtered>false</filtered>
        </file>

        <file>
            <source>../README.txt</source>
            <outputDirectory></outputDirectory>
            <fileMode>644</fileMode>
            <filtered>false</filtered>
        </file>
        <!-- BPS Server specific overriding configs -->
        <file>
            <source>./carbon-home/conf/transports/netty-transports.yml</source>
            <outputDirectory>conf/transports/</outputDirectory>
            <fileMode>644</fileMode>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>
